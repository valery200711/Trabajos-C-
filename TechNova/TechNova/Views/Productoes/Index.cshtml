@model IEnumerable<TechNova.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Productos</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Nuevo Producto</a>
</p>

<!-- Buscador -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" class="form-control" placeholder="Buscar por nombre..." />
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
</form>

<!-- Tabla de productos -->
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.First().PrecioUnitario)</th>
            <th>@Html.DisplayNameFor(model => model.First().Stock)</th>
            <th>@Html.DisplayNameFor(model => model.First().Codigo)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.PrecioUnitario.ToString("C")</td>
                <td>@item.Stock</td>
                <td>@item.Codigo</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ProductoId">Editar</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ProductoId">Detalles</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductoId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
