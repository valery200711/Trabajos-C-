@{
    ViewData["Title"] = "Inicio - TechNova";
}

<div class="container py-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Bienvenido a <span class="text-dark">TechNova</span></h1>
        <p class="lead text-secondary">
            Innovación tecnológica, gestión eficiente y soluciones inteligentes para tu empresa.
        </p>
    </div>
    
    <div class="row g-4">
        <!-- Tarjeta 1 -->
        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold text-primary">Gestión de Clientes</h5>
                    <p class="card-text">
                        Administra y controla toda la información de tus clientes de forma rápida y ordenada.
                    </p>
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-primary">Ir a Clientes</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta 2 -->
        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold text-primary">Productos</h5>
                    <p class="card-text">
                        Registra, edita y administra el catálogo completo de productos tecnológicos.
                    </p>
                    <a asp-controller="Productoes" asp-action="Index" class="btn btn-primary">Ver Productos</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta 3 -->
        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold text-primary">Ventas</h5>
                    <p class="card-text">
                        Controla ventas, detalles, totales y reportes de manera ágil y eficiente.
                    </p>
                    <a asp-controller="Ventas" asp-action="Index" class="btn btn-primary">Administrar Ventas</a>
                </div>
            </div>
        </div>
    </div>

</div>
