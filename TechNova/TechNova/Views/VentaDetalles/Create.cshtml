@model TechNova.Models.VentaDetalle

@{
    ViewData["Title"] = "Agregar Producto a la Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agregar Producto a la Venta</h1>

<div class="card p-4 shadow-sm mb-4">
    <h4>Información del Detalle</h4>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="VentaId" class="form-label">Venta</label>
            <select asp-for="VentaId" class="form-select" asp-items="ViewBag.VentaId"></select>
        </div>

        <div class="mb-3">
            <label asp-for="ProductoId" class="form-label">Producto</label>
            <select asp-for="ProductoId" id="productoSelect" class="form-select" asp-items="ViewBag.ProductoId"></select>
        </div>

        <div class="mb-3">
            <label asp-for="Cantidad" class="form-label">Cantidad</label>
            <input asp-for="Cantidad" id="cantidadInput" class="form-control" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PrecioUnitario" class="form-label">Precio Unitario</label>
            <input asp-for="PrecioUnitario" id="precioUnitarioInput" class="form-control" readonly />
            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Subtotal" class="form-label">Subtotal</label>
            <input asp-for="Subtotal" id="subtotalInput" class="form-control" readonly />
            <span asp-validation-for="Subtotal" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Agregar Detalle</button>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </form>
</div>

@section Scripts {
    <script>
        // Diccionario de Productos y Precios (lo envías desde el controlador)
        var productos = @Html.Raw(Json.Serialize(ViewBag.ProductosData));

        // Cuando seleccionas un producto, llena el precio unitario
        document.getElementById("productoSelect").addEventListener("change", function () {
            let id = this.value;
            if (productos[id]) {
                document.getElementById("precioUnitarioInput").value = productos[id];
                calcularSubtotal();
            }
        });

        // Cuando cambia la cantidad, recalcular subtotal
        document.getElementById("cantidadInput").addEventListener("input", calcularSubtotal);

        function calcularSubtotal() {
            let precio = parseFloat(document.getElementById("precioUnitarioInput").value) || 0;
            let cantidad = parseFloat(document.getElementById("cantidadInput").value) || 0;
            document.getElementById("subtotalInput").value = (precio * cantidad).toFixed(2);
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
