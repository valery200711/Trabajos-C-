@model IEnumerable<TechNova.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Clientes</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Nuevo Cliente</a>
</p>

<!-- Buscador -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" class="form-control" placeholder="Buscar por nombre..." />
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
</form>

<!-- Tabla de clientes -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().NombreCompleto)</th>
            <th>@Html.DisplayNameFor(model => model.First().Correo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.First().Telefono)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreCompleto</td>
                <td>@item.Correo</td>
                <td>@item.Direccion</td>
                <td>@item.Telefono</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ClienteId">Editar</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ClienteId">Detalles</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ClienteId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
